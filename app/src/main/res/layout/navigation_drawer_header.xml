<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:background="@drawable/header" />
    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/navigation_drawer_header_margin"
        android:layout_width="235dp"
        android:layout_height="64dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_gravity="left|bottom"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:text="@string/HeaderName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="@string/HeaderEmail"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" /> -->
    </LinearLayout>

    <ImageView
        android:id="@+id/imageSms"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="138dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_action_sms"
        android:layout_gravity="start" />
    <ImageView
        android:id="@+id/imageEmail"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="138dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_action_email"
        android:layout_gravity="start" />
    <ImageView
        android:id="@+id/imageVk"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="138dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_action_vk" />
    <ImageView
        android:id="@+id/imageTel"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="138dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_action_tel" />

</FrameLayout>